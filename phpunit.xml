<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        backupGlobals="true"
        colors="true"
        stopOnFailure="false"
        bootstrap="vendor/autoload.php">

    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>

    <testsuite name="Unit Test Value object">
        <directory suffix=".php">./tests/unit</directory>
    </testsuite>

</phpunit>